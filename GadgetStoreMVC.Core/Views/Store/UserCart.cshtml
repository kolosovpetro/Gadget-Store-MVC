@model IEnumerable<GadgetStoreMVC.Models.Models.OrderModel>

@{
    ViewData["Title"] = "UserCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UserCart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GadgetId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GadgetId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-controller="Store" asp-action="EditCartItem" asp-route-orderId="@item.OrderId">Edit order</a>
            </td>
            <td>
                <a asp-controller="Store" asp-action="DeleteCartItem" asp-route-orderId="@item.OrderId">Cancel order</a>
            </td>
        </tr>
}
    </tbody>
</table>
